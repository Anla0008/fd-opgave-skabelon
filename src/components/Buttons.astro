---
const { variant } = Astro.props;
---

<button class={variant}>
  <slot />
</button>

<style>
  @layper components {
    .primary {
      border-radius: 1.25rem;
      place-self: center;
      padding: 0.25rem 1rem;
      color: var(--primary03-color);
      background: var(--primary01-color);
    }
    .primary:hover {
      background-color: #ffe5a2;
    }

    .secondary {
      border-radius: 1.25rem;
      place-self: center;
      padding: 0.25rem 1rem;
      color: var(--secondary02-color);
      background: var(--primary03-color);
    }

    .secondary:hover {
      background-color: var(--secondary02-color);
      color: var(--primary03-color);
    }

    .tertiary {
      border-radius: 1.25rem;
      padding: 0.25rem 1rem;
      color: var(--primary03-color);
      background: var(--secondary02-color);
    }
  }
</style>
