---
//@ts-nocheck
const coreValuesData = await fetch("https://frontend-design-theme.netlify.app/api/coreValues").then((response) => response.json());
---

<div class="core-values-wrapper">
    <section class="core-values">
        <p class="titel">Growing with our Clients</p>
        <h2>{coreValuesData.title}</h2>
        <p>{coreValuesData.subtitle}</p>
        <a class="contact-button" href={coreValuesData.button.link}>
            {coreValuesData.button.text}
        </a>
        <div class="cards">
            {
                coreValuesData.values.map((value) => (
                    <div class="card">
                        <h3>{value.title}</h3>
                        <p>{value.description}</p>
                        <a href={value.link.url}>{value.link.text} â†’</a>
                    </div>
                ))
            }
        </div>
    </section>
</div>

<style>
    @layer components {
        .core-values-wrapper {
            background-color: var(--primary03-color);
        }

        .core-values {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: repeat(4, auto);
            gap: 1rem;
            color: var(--secondary02-color);
            padding: 5rem 2rem;
            font-family: var(--font-secondary);
            position: relative;
            max-width: 1100px;
            margin: 0 auto;
        }

        .core-values p,
        .core-values h2,
        .core-values .titel,
        .core-values .contact-button {
            grid-column: 1 / -1;
        }

        .core-values .titel {
            font-size: var(--font-size-p);
            text-transform: uppercase;
            background-color: var(--primary01-color);
            color: var(--primary03-color);
            border-radius: 15px;
            text-align: center;
            margin: 0;
            max-width: 16rem;
        }

        .core-values h2 {
            font-size: var(--font-size-h2);
            font-weight: var(--font-weight-bold);
            font-family: var(--font-primary);
            margin-bottom: 0.75rem;
        }

        .core-values > p {
            font-size: var(--font-size-p);
            color: var(--secondary01-color);
            max-width: 600px;
            margin: 0 auto 1rem;
        }

        .cards {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 2rem;
            margin: 0 auto;
        }

        .card {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            background-color: var(--secondary02-color);
            color: var(--primary03-color);
            padding: 2rem;
            border-radius: 16px;
            text-align: center;
            transition:
                transform 0.3s,
                box-shadow 0.3s;
            font-family: var(--font-secondary);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .card h3,
        .card p {
            margin-bottom: 0.75rem;
        }

        .card p {
            font-size: var(--font-size-p);
            color: var(--primary03-color);
            line-height: 1.6;
        }

        .card a {
            display: inline-block;
            margin-top: 1rem;
            font-weight: var(--font-weight-bold);
            color: var(--primary01-color);
            text-decoration: none;
        }

        .card a:hover {
            text-decoration: underline;
        }

        .contact-button {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 2.5rem;
            width: 10.4375rem;
            background-color: var(--secondary02-color);
            color: var(--primary03-color);
            font-weight: var(--font-weight-bold);
            border-radius: 25px;
            text-decoration: none;
            font-family: var(--font-primary);
            text-align: center;
            transition:
                transform 0.3s,
                background-color 0.3s;
        }

        .contact-button:hover {
            background-color: var(--primary01-color);
            transform: scale(1.05);
        }

        /* Responsiv justering */
        @media (max-width: 1024px) {
            .core-values {
                grid-template-columns: 1fr;
            }

            .cards {
                grid-template-columns: 1fr;
            }

            .core-values .titel,
            .core-values h2 {
                grid-column: 1;
                text-align: center;
            }

            .core-values > p {
                text-align: left;
                max-width: 100%;
            }

            .contact-button {
                margin: 1rem auto 0;
            }
        }

        @media (max-width: 600px) {
            .contact-button {
                position: static;
                display: block;
                margin: 2rem auto 0;
            }

            .core-values h2 {
                font-size: 2rem;
            }
        }
    }
</style>
