---
//@ts-nocheck
const coreValuesData = await fetch("https://frontend-design-theme.netlify.app/api/coreValues").then((response) => response.json());
---

<div class="core-values-wrapper">
    <section class="core-values">
        <p class="titel">Growing with our Clients</p>
        <h2>{coreValuesData.title}</h2>
        <p>{coreValuesData.subtitle}</p>
        <a class="contact-button" href={coreValuesData.button.link}>
            {coreValuesData.button.text}
        </a>
        <div class="cards">
            {
                coreValuesData.values.map((value) => (
                    <>
                        <div class="card">
                            <h3>{value.title}</h3>
                            <p>{value.description}</p>
                            <a href={value.link.url}>{value.link.text} →</a>
                        </div>
                    </>
                ))
            }
        </div>
    </section>
</div>

<style>
    @layer components {
        /* Wrapper for Core Values Sektionen */
        .core-values-wrapper {
            background-color: var(--primary03-color); /* Sort baggrund */
        }

        /* Core Values Sektion */
        .core-values {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: auto auto auto auto;
            gap: 1rem;
            color: var(--secondary02-color); /* Hvid tekst */
            padding: 5rem 2rem;
            font-family: var(--font-secondary);
            position: relative;
            max-width: 1100px;
            margin: 0 auto;
        }

        /* Titel (p) i første række, første kolonne */
        .core-values .titel {
            grid-column: 1 / span 2;
            grid-row: 1;
            font-size: var(--font-size-p);
            text-transform: uppercase;
            background-color: var(--primary01-color);
            color: var(--primary03-color);
            border-radius: 15px;
            text-align: center;
            margin: 0;
            max-width: 16rem;
        }

        /* Hovedoverskrift (h2) i anden række, første kolonne */
        .core-values h2 {
            grid-column: 1;
            grid-row: 2;
            font-size: var(--font-size-h2);
            font-weight: var(--font-weight-bold);
            font-family: var(--font-primary);
            margin-bottom: 0.75rem;
            white-space: nowrap;
        }

        /* Underoverskrift (subtitle p) i tredje række, første kolonne */
        .core-values > p {
            grid-column: 1;
            grid-row: 3;
            font-size: var(--font-size-p);
            color: var(--secondary01-color); /* Lys grå */
            max-width: 600px;
            margin: 0 auto 1rem;
        }
        /* Cards i fjerde række og strækker sig over begge kolonner */
        .cards {
            display: grid;
            grid-column: 1 / span 4;
            grid-row: 4;
            grid-template-columns: repeat(4, 1fr);
            gap: 2rem;
            max-width: 1100px;
            margin: 0 auto;
        }

        /* Individuelle kort */
        .card {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            background-color: var(--secondary02-color); /* Hvid */
            color: var(--primary03-color); /* Sort */
            padding: 2rem;
            border-radius: 16px;
            text-align: center;
            transition:
                transform 0.3s ease,
                box-shadow 0.3s ease;
            font-family: var(--font-secondary);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .card h3 {
            font-size: var(--font-size-h3);
            font-family: var(--font-primary);
            margin-bottom: 0.75rem;
        }

        .card p {
            font-size: var(--font-size-p);
            color: var(--primary03-color); /* Sort tekst */
            line-height: 1.6;
        }

        /* Links i kortene */
        .card a {
            display: inline-block;
            margin-top: 1rem;
            font-weight: var(--font-weight-bold);
            color: var(--primary01-color); /* Gul */
            text-decoration: none;
        }

        .card a:hover {
            text-decoration: underline;
        }

        /* "Contact button" i tredje række, anden kolonne */
        .contact-button {
            grid-column: 4;
            grid-row: 3;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 2.5rem;
            line-height: 1;
            width: 10.4375rem;
            background-color: var(--secondary02-color); /* Hvid baggrund */
            color: var(--primary03-color); /* Sort tekst */
            font-weight: var(--font-weight-bold);
            border-radius: 25px;
            text-decoration: none;
            font-family: var(--font-primary);
            text-align: center;
            transition:
                transform 0.3s ease,
                background-color 0.3s ease;
        }

        .contact-button:hover {
            background-color: var(--primary01-color); /* Gul */
            transform: scale(1.05);
        }

        /* Responsiv justering */
        @media (max-width: 1024px) {
            .cards {
                grid-column: 1;
                grid-row: 5;
            }

            .card {
                width: 80%;
                margin: 0 auto;
                padding: 1rem;
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: left;
            }

            .core-values {
                grid-template-columns: 1fr;
                grid-template-rows: auto auto auto auto;
            }

            .core-values .titel {
                grid-column: 1;
                grid-row: 1;
                text-align: center;
            }

            .core-values h2 {
                grid-column: 1;
                grid-row: 2;
                font-size: var(--font-size-h2);
                font-weight: var(--font-weight-bold);
                font-family: var(--font-primary);
                margin-bottom: 0.75rem;
                white-space: normal;
                word-wrap: break-word;
                overflow-wrap: anywhere;
            }

            .core-values > p {
                grid-column: 1;
                grid-row: 3;
                text-align: left;
                max-width: 100%;
            }

            .contact-button {
                grid-column: 1;
                grid-row: 4;
                margin: 1rem auto 0;
            }
        }

        @media (max-width: 600px) {
            .cards {
                grid-template-columns: 1fr;
            }
            .contact-button {
                position: static;
                display: block;
                margin: 2rem auto 0;
            }

            .core-values h2 {
                font-size: 2rem;
            }
        }
    }
</style>
