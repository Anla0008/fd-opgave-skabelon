---
import Buttons from "./Buttons.astro";

//@ts-nocheck
const servicesData = await fetch("https://frontend-design-theme.netlify.app/api/services").then((response) => response.json());
---

<ul class="services-list">
  {
    servicesData.services.map((service) => (
      <li class="service-item">
        <h6>{service.title}</h6>
        <p>{service.description}</p>
        <div class="button-container">
          <Buttons variant="secondary" href="#0">
            {service.buttonText}
          </Buttons>
        </div>
      </li>
    ))
  }
</ul>

<style>
  @layer components {
    .services-list {
      display: flex;
      gap: 1.25rem;
      justify-content: center;
      width: 100%;
      max-width: 1200px;
      margin: auto;
      position: relative;
      z-index: 5;
      padding: 1rem;

      @media (min-width: 768px) {
        padding: 2rem 4rem;
      }

      @media (max-width: 600px) {
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        margin: 0;
      }
    }

    .service-item {
      border-radius: 1.25rem;
      border: 1px solid rgba(255, 255, 255, 0.2);
      background: var(--primary03-color);
      color: var(--secondary02-color);
      backdrop-filter: blur(16px);
      padding: 1.5rem;
      position: relative;
      z-index: 10;
      width: 100%;

      @media (min-width: 768px) {
        width: calc(33.33% - 1.25rem);
        padding: 2.875rem;
      }
    }

    .service-item h6 {
      font-size: var(--font-size-h6);
      font-family: var(--font-primary);
      font-weight: var(--font-weight-bold);
    }

    .service-item p {
      font-size: var(--font-size-p);
      font-family: var(--font-secondary);
      line-height: var(--line-height-p);
    }

    .button-container {
      display: flex;
      justify-content: flex-start;
      margin-top: 2rem;
    }
  }
</style>
