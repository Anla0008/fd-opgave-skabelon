---
import Buttons from "./Buttons.astro";

//@ts-nocheck
const servicesData = await fetch("https://frontend-design-theme.netlify.app/api/services").then((response) => response.json());
---

<ul>
  {
    servicesData.services.map((service) => (
      <li>
        {" "}
        <h6>{service.title}</h6> <p>{service.description}</p>{" "}
        <div class="button-container">
          {" "}
          <Buttons variant="secondary" href="#0">
            {" "}
            {service.buttonText}{" "}
          </Buttons>{" "}
        </div>{" "}
      </li>
    ))
  }
</ul>
<style>
  @layer components {
    ul {
      display: flex;
      gap: 1.25rem;
      justify-content: center;
      width: 100%;
      max-width: 1200px;
      margin: auto;
      position: relative;
      z-index: 5;
      margin-top: -10%;
      padding-bottom: 0rem;
      margin-bottom: 0rem;
      padding: 1rem;
      @media (min-width: 768px) {
        padding: 2rem 4rem;
      }
    }
    li {
      display: block;
      border-radius: 1.25rem;
      border: 1px solid rgba(255, 255, 255, 0.2);
      background: rgba(38, 38, 38, 0.9);
      backdrop-filter: blur(16px);
      padding: 1.5rem;
      position: relative;
      z-index: 10;
      width: 100%;
      @media (min-width: 768px) {
        width: calc(33.33% - 1.25rem);
        padding: 2.875rem;
      }
    }
    .button-container {
      display: flex;
      justify-content: flex-start;
      margin-top: 2rem;
    }
    .left-button {
      display: block;
    }

    @media (width<600px) {
      ul {
        flex-direction: column;
        align-items: center;
        padding: 1rem;
        margin: 0;
        gap: 1rem;
      }
    }
  }
</style>
